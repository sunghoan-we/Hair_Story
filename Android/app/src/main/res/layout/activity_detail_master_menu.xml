<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".superadmin.mastermenu.DetailMasterMenu">

    <include
        android:id="@+id/header"
        layout="@layout/super_admin_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <!-- Back button & text -->

    <!-- Main Contents -->




    <!-- Include footer -->

    <TextView
        android:id="@+id/label_detail_masterMenu_MI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/str_detail_masterMenu_mTitle"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <ImageView
        android:id="@+id/img_list_masterMenu_Menu5"
        android:layout_width="0dp"
        android:layout_height="150sp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#A8A8A8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_detail_masterMenu_MI"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/label_detail_masterMenu_mID"
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#EDEDED"
        android:gravity="center_vertical"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="Menu ID"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_list_masterMenu_Menu5" />

    <TextView
        android:id="@+id/data_detail_masterMenu_mID"
        android:layout_width="0dp"
        android:layout_height="40sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#EDEDED"
        android:gravity="right|center_vertical"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="Menu ID"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_detail_masterMenu_mID"
        app:layout_constraintTop_toBottomOf="@+id/img_list_masterMenu_Menu5" />

    <TextView
        android:id="@+id/data_detail_masterMenu_mName"
        android:layout_width="0dp"
        android:layout_height="40sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#EDEDED"
        android:gravity="right|center_vertical"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="Menu Name"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/label_detail_masterMenu_mID"
        app:layout_constraintTop_toBottomOf="@+id/data_detail_masterMenu_mID" />

    <TextView
        android:id="@+id/label_detail_masterMenu_mName"
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#EDEDED"
        android:gravity="center_vertical"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="Menu Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_detail_masterMenu_mID" />

    <LinearLayout
        android:id="@+id/box_buttons"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_below="@+id/textView39"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_detail_masterMenu_mName">

        <Button
            android:id="@+id/btn_detail_masterMenu_Modify"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_below="@+id/textView26"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="50sp"
            android:layout_marginRight="50sp"
            android:layout_marginBottom="10sp"
            android:text="Modify"
            app:backgroundTint="#A5A5A5" />

        <Button
            android:id="@+id/btn_detail_masterMenu_Delete"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_below="@+id/textView26"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:layout_toEndOf="@+id/btn_detail_masterMenu_Modify"
            android:layout_toRightOf="@+id/btn_detail_masterMenu_Modify"
            android:text="Delete"
            app:backgroundTint="#A5A5A5" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>