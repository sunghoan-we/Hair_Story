<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="wrap_content"

    android:background="#F4F4F4"

    android:orientation="horizontal"

    android:paddingLeft="0sp"
    android:paddingTop="10sp"
    android:paddingRight="0sp"
    android:paddingBottom="10sp"

    app:layout_constraintHorizontal_chainStyle="spread">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="#DDDDDD"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAdminHeaderBack"
        app:layout_constraintTop_toBottomOf="@+id/alarm_button"
        app:layout_marginBaseline="0dp" />

    <ImageView
        android:id="@+id/btnAdminHeaderBack"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:background="#DDDDDD"
        android:padding="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_button"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/alarm_button"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bell"
        android:contentDescription="menu3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="319dp"
        android:layout_marginRight="319dp"
        android:background="@drawable/menu"
        android:onClick="onClickMenu"
        app:layout_constraintEnd_toStartOf="@+id/alarm_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>